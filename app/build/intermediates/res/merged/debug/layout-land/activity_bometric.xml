<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bometric"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.equadrado.obstettools.BiometricActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="6">

            <TextView
                android:text="BPD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtBPD"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
            <CheckBox
                android:text="00Weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkBoxBPD"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:enabled="false" />

            <TextView
                android:text="OFD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtOFD"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
            <CheckBox
                android:text="00Weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkBoxOFD"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:enabled="false" />

            <TextView
                android:text="Ab AP x Tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtAbAPD"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtAbTxD"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="Abd Circ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtAbCirc"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
            <CheckBox
                android:text="00Weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkBoxCA"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:enabled="false" />

            <TextView
                android:text="Femur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtFemur"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
            <CheckBox
                android:text="00Weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkBoxFemur"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:enabled="false" />

            <TextView
                android:text="Umerus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textSize="24sp"
                android:layout_marginBottom="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/edtUmerus"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
            <CheckBox
                android:text="00Weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkBoxUmerus"
                android:minWidth="50dp"
                android:textSize="24sp"
                android:layout_marginBottom="15dp"
                android:enabled="false" />
        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewCalcs"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
